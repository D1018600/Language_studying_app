<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".WorldActivity">

    <ImageView
        android:id="@+id/notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/background"/>
    <HorizontalScrollView
        android:layout_width="805dp"
        android:layout_height="391dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/lifun_font"
                android:text="Episode 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ep1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep1"
                app:layout_constraintStart_toStartOf="@+id/tv_ep1"
                app:layout_constraintTop_toBottomOf="@+id/tv_ep1"
                app:srcCompat="@drawable/setting" />

            <RatingBar
                android:id="@+id/rb_ep1"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:foregroundTint="#FFEB3B"
                android:indeterminateOnly="false"
                android:isIndicator="true"
                android:mirrorForRtl="true"
                android:numStars="3"
                android:progressTint="#FFEB3B"
                android:rating="3"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep1"
                app:layout_constraintStart_toStartOf="@+id/tv_ep1"
                app:layout_constraintTop_toBottomOf="@+id/iv_ep1" />

            <TextView
                android:id="@+id/tv_ep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/lifun_font"
                android:text="Episode 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_ep1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ep2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep2"
                app:layout_constraintStart_toStartOf="@+id/tv_ep2"
                app:layout_constraintTop_toBottomOf="@+id/tv_ep2"
                app:srcCompat="@drawable/setting" />

            <RatingBar
                android:id="@+id/rb_ep2"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="3"
                android:progressTint="#FFEB3B"
                android:rating="1"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep2"
                app:layout_constraintStart_toStartOf="@+id/tv_ep2"
                app:layout_constraintTop_toBottomOf="@+id/iv_ep2" />

            <TextView
                android:id="@+id/tv_ep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="84dp"
                android:fontFamily="@font/lifun_font"
                android:text="Episode 3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_ep2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ep3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep3"
                app:layout_constraintStart_toStartOf="@+id/tv_ep3"
                app:layout_constraintTop_toBottomOf="@+id/tv_ep3"
                app:srcCompat="@drawable/setting" />

            <RatingBar
                android:id="@+id/rb_ep3"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="3"
                android:progressTint="#FFEB3B"
                android:rating="2"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep3"
                app:layout_constraintStart_toStartOf="@+id/tv_ep3"
                app:layout_constraintTop_toBottomOf="@+id/iv_ep3" />

            <TextView
                android:id="@+id/tv_ep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="152dp"
                android:fontFamily="@font/lifun_font"
                android:text="Episode 4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_ep3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ep4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep4"
                app:layout_constraintStart_toStartOf="@+id/tv_ep4"
                app:layout_constraintTop_toBottomOf="@+id/tv_ep4"
                app:srcCompat="@drawable/setting" />

            <RatingBar
                android:id="@+id/rb_ep4"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="3"
                android:progressTint="#FFEB3B"
                android:rating="2"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep4"
                app:layout_constraintStart_toStartOf="@+id/tv_ep4"
                app:layout_constraintTop_toBottomOf="@+id/iv_ep4" />

            <TextView
                android:id="@+id/tv_ep5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="72dp"
                android:fontFamily="@font/lifun_font"
                android:text="Episode 5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_ep4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ep5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep5"
                app:layout_constraintStart_toStartOf="@+id/tv_ep5"
                app:layout_constraintTop_toBottomOf="@+id/tv_ep5"
                app:srcCompat="@drawable/setting" />

            <RatingBar
                android:id="@+id/rb_ep5"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:numStars="3"
                android:progressTint="#FFEB3B"
                android:rating="0"
                app:layout_constraintEnd_toEndOf="@+id/tv_ep5"
                app:layout_constraintStart_toStartOf="@+id/tv_ep5"
                app:layout_constraintTop_toBottomOf="@+id/iv_ep5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_join_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#253769"
        android:fontFamily="@font/lifun_font"
        android:text="Join stage"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>