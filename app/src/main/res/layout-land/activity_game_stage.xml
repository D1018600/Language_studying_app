<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".GameStage">
  <ImageView
      android:id="@+id/notification_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:background="@drawable/background"/>

  <TextView
      android:id="@+id/tv_ch_q"
      android:layout_width="743dp"
      android:layout_height="45dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="88dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="中文題目"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_ans1"
      android:layout_width="743dp"
      android:layout_height="51dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:gravity="center"
      android:maxLines="2"
      android:paddingStart="100dp"
      android:paddingEnd="100dp"
      android:textAlignment="gravity"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textStyle="bold"
      app:circularflow_radiusInDP="36dp"
      app:layout_constraintStart_toStartOf="@+id/tv_ch_q"
      app:layout_constraintTop_toBottomOf="@+id/tv_ch_q" />

  <TextView
      android:id="@+id/tv_ch1"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="48dp"
      android:layout_marginTop="228dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer1"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_ch2"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="224dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer2"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch1"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tv_ch3"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="400dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer3"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch2"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tv_ch4"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="576dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer4"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch3"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tv_ch5"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer5"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@+id/tv_ch1"
      app:layout_constraintTop_toBottomOf="@+id/tv_ch1" />

  <TextView
      android:id="@+id/tv_ch6"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="224dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer6"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch5"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tv_ch7"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="400dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer7"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch6"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/tv_ch8"
      android:layout_width="170dp"
      android:layout_height="40dp"
      android:layout_marginStart="576dp"
      android:background="@drawable/game_et_style"
      android:fontFamily="@font/lifun_font"
      android:text="answer8"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      app:circularflow_radiusInDP="5dp"
      app:layout_constraintBottom_toBottomOf="@+id/tv_ch7"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/tv_ch7"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btn_next_stage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="@font/lifun_font"
      android:text="Next stage"
      android:textStyle="bold"
      app:backgroundTint="#4CAF50"
      app:cornerRadius="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.499"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="@+id/btn_game_stop"
      app:layout_constraintEnd_toEndOf="@+id/btn_game_stop"
      app:layout_constraintStart_toStartOf="@+id/btn_game_stop"
      app:layout_constraintTop_toTopOf="@+id/btn_game_stop"
      app:srcCompat="@drawable/icon_stop" />

  <Button
      android:id="@+id/btn_game_stop"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:fontFamily="@font/lifun_font"
      android:textStyle="bold"
      app:backgroundTint="#00FFFFFF"
      app:cornerRadius="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>