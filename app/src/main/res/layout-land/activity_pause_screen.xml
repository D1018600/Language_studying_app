<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    tools:context=".PauseScreen">

    <ImageView
        android:id="@+id/notification_background"
        android:layout_width="848dp"
        android:layout_height="411dp"
        android:background="@drawable/background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:background="@drawable/pause_act_back"
        app:layout_constraintBottom_toBottomOf="@+id/notification_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_background">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="178dp"
            android:layout_height="57dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/lifun_font"
            android:text="Pause"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="159dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:srcCompat="@drawable/icon_restart" />

        <Button
            android:id="@+id/btn_pause_retry"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="172dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/lifun_font"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_pause_continue"
            app:layout_constraintEnd_toStartOf="@+id/btn_pause_continue"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_pause_continue"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/icon_continue" />

        <Button
            android:id="@+id/btn_pause_continue"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/lifun_font"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="108dp"
            android:layout_height="108dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:srcCompat="@drawable/icon_home" />

        <Button
            android:id="@+id/btn_pause_home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="160dp"
            android:fontFamily="@font/lifun_font"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_pause_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_pause_continue"
            app:layout_constraintTop_toTopOf="@+id/btn_pause_continue"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>